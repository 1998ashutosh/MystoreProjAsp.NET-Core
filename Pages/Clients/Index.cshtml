@page
@model MystoreProj.Pages.Clients.IndexModel
@{
    ViewData["Title"] = "Clients";
}

<br />
<h2>List of Clients</h2>
<a class="btn btn-primary btn-sm btn-margin" href="/Clients/Create">Add New Client</a>
<table class="table" id="table-background-css">
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Email</th>
            <th>Phone</th>
            <th>Address</th>
            <th>Created At</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.listClients)
        {
                <tr>
                    <td>@item.id</td>
                    <td>@item.name</td>
                    <td>@item.email</td>
                    <td>@item.phone</td>
                    <td>@item.address</td>
                    <td>@item.created_at</td>
                    <td class="flex-container">
                        <a class="btn btn-primary btn-sm button-bg-green btn-margin" href="/Clients/Edit?id=@item.id">Edit</a>
                        <a class="btn btn-primary btn-sm button-bg-red btn-margin" href="/Clients/Delete?id=@item.id">Delete</a>
                    </td>

                </tr>
            }
    </tbody>
</table>